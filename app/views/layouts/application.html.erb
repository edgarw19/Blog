<!DOCTYPE html>
<html>
<head>
	<title>Blog</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-th-list"></span></a>
					<a href="#" class="brand"><h1>Learning</h1><small>A Way of Life</small></a>
					<div class="nav-collapse collapse">
						<ul class="nav pull-right">
							<li class="<%= 'active' if current_page?(root_path) %>">
								<%= link_to "Home", root_path %></li>
								<li class="<%= 'active' if current_page?(posts_path) %>">
									<%= link_to "Posts", posts_path %></li>
									<% if signed_in? %>
									<li class="<%= 'active' if current_page?(edit_user_path(current_user)) %>"><%= link_to "Profile", current_user %></li>
									<li><%= link_to "Sign out", log_out_path, method: "delete" %></li>
									<% else %>
									<li><%= link_to "Sign in", log_in_path %></li>

									<% end %>
									<li><%= link_to "Sign up", sign_up_path %></li>
									<li><%= link_to "About", about_path %></li>
								</ul>
							</div>
						</div>
					</div>
				</nav>
				<div class="container">
					<% flash.each do |key, value| %>
					<div class="alert alert-<%= key %>"><%= value %></div>
					<% end %>
				</div>


			</head>
			<div class='wrapper'>
				<body>
					<%= yield %>

				</body>
			</div>
		</div>
		</html>

